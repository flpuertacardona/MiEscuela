@model MiEscuela.Web.Models.Escuela

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Create</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        div, h4 {
            padding-top: 10px;
            padding-bottom: 0.5px;
            padding-left: 20px;
            font-variant: small-caps;
        }
    </style>
</head>
<body>

<h4>Escuela</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" placeholder="Ingrese fecha creación" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais " class="control-label"></label>
                @Html.DropDownList("Pais",
                Html.GetEnumSelectList<Paises>(), "Seleccione pais", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Ciudad " class="control-label"></label>
                @Html.DropDownList("Ciudad",
                Html.GetEnumSelectList<Ciudades>(), "Seleccione ciudad", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese dirección comercial" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEscuela " class="control-label"></label>
                @Html.DropDownList("TipoEscuela",
                Html.GetEnumSelectList<TiposEscuela>(), "Seleccione tipo escuela", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese dirección electrónica" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rector" class="control-label"></label>
                <input asp-for="Rector" class="form-control" placeholder="Ingrese nombre rector" />
                <span asp-validation-for="Rector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre escuela" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
